<%- include('./partials/head') %>

<body>
    <header>
        <h1>Luh calm fit</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/save-selection">Saved Outfits</a></li>
                <li><a href="/winter">Winter</a></li>
                <li><a href="/fall">Fall</a></li>
                <li><a href="/spring">Spring</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- Formulier voor het selecteren van een kledingstuk uit elke categorie -->
        <form action="/save-selection" method="POST">
            <!-- carousel 1: Shirts -->
            <div class="carousel-container">
                <button type="button" class="carousel-button left" data-target="#carouselShirts"><%- include('./partials/left-arrow-svg') %></button>
                <section>
                    <ul id="carouselShirts" class="carousel">
                        <% shirts.forEach(shirt => { %>
                            <li>
                                <label>
                                    <input type="radio" name="selectedShirt" value="<%= shirt.id %>" required>
                                    <img src="https://fdnd-agency.directus.app/assets/<%= shirt.foto %>" alt="<%= shirt.type %> <%= shirt.id %>">
                                </label>
                            </li>
                        <% }) %>
                    </ul>
                </section>
                <button type="button" class="carousel-button right" data-target="#carouselShirts"><%- include('./partials/right-arrow-svg') %></button>  
            </div>

            <!-- carousel 2: Broeken -->
            <div class="carousel-container">
                <button type="button" class="carousel-button left" data-target="#carouselBroeken"><%- include('./partials/left-arrow-svg') %></button>
                <section>
                    <ul id="carouselBroeken" class="carousel">
                        <% broeken.forEach(broek => { %>
                            <li>
                                <label>
                                    <input type="radio" name="selectedBroek" value="<%= broek.id %>" required>
                                    <img src="https://fdnd-agency.directus.app/assets/<%= broek.foto %>" alt="<%= broek.type %> <%= broek.id %>" class="broek-img">
                                </label>
                            </li>
                        <% }) %>
                    </ul>
                </section>
                <button type="button" class="carousel-button right" data-target="#carouselBroeken"><%- include('./partials/right-arrow-svg') %></button> 
            </div>

            <!-- carousel 3: Schoenen -->
            <div class="carousel-container">
                <button type="button" class="carousel-button left" data-target="#carouselSchoenen"><%- include('./partials/left-arrow-svg') %></button>
                <section>
                    <ul id="carouselSchoenen" class="carousel">
                        <% schoenen.forEach(schoen => { %>
                            <li>
                                <label>
                                    <input type="radio" name="selectedSchoen" value="<%= schoen.id %>" required>
                                    <img src="https://fdnd-agency.directus.app/assets/<%= schoen.foto %>" alt="<%= schoen.type %> <%= schoen.id %>">
                                </label>
                            </li>
                        <% }) %>
                    </ul>
                </section>
                <button type="button" class="carousel-button right" data-target="#carouselSchoenen"><%- include('./partials/right-arrow-svg') %></button> 
            </div>

            <!-- Save-knop -->
            <button type="submit" class="save-button">Save Outfit!</button>
        </form>
    </main>

    <script src="/script.js" defer></script>
</body>
</html>
